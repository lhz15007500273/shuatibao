<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="答题卡"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 统计信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已答："
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_answered_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未答："
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_unanswered_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确："
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_correct_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/success"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 题目网格 -->
    <GridView
        android:id="@+id/gv_questions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="5"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:stretchMode="columnWidth"
        android:layout_marginBottom="16dp" />

    <!-- 图例 - 根据代码中的状态更新 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 当前题目 -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_answer_status_current"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="12dp" />

        <!-- 已提交且正确 -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_answer_status_correct"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="12dp" />

        <!-- 已提交但错误 -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_answer_status_wrong"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错误"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="12dp" />

        <!-- 已保存但未提交 -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_answer_status_saved"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已保存"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="12dp" />

        <!-- 未答题 -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_answer_status_default"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未答"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_close_sheet"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_outline"
            android:text="关闭"
            android:textColor="@color/primary"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_submit_all"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary"
            android:text="提交答案"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_finish_practice"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primary"
            android:text="结束练习"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</LinearLayout>